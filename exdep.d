module exdep;

import std.stdio;
import std.digest.crc;
import std.format;
import std.array;
import std.string;
import std.file;
import std.path;
import std.process;

import cmdopt;

string home(string path, CmdOptions opt)
{
    string homeDir;
    version(Posix)
        homeDir = environment.get("HOME");
    version(Windows)
        homeDir = environment.get("APPDATA").replace("\\", "/");
    if (opt.local)
        homeDir = ".";
    return homeDir ~ "/" ~ path;
}

class Exdep
{
    string descriptor;
    string id;

    string vcs;
    string hostname;
    string path;
    
    string subdir = "";
    string location;
    
    string srcDir;
    
    bool useHTTPS = false;

    this(string desc, bool https, CmdOptions cmd)
    {
        descriptor = desc;
        useHTTPS = https;
        id = crc32Of(descriptor).crcHexString;
        string name;
        try
        {
            formattedRead(descriptor, "%s:%s:%s", &name, &path, &subdir);
        }
        catch(Exception) {}
        finally {}
        
        // TODO: check the result

        immutable auto pos = indexOf(name, "@");
        if (pos >= 0)
            formattedRead(name, "%s@%s", &vcs, &hostname);
        else
            vcs = name;

        if (vcs != "local")
            // TODO: use config to override this
            location = home(format(".cook/remote/%s", id), cmd);
        else
            location = path;
            
        if (subdir.length)
            srcDir = location ~ "/" ~ subdir;
        else
            srcDir = location;
    }

    void print()
    {
        writefln("id: %s", id);
        writefln("VCS: %s", vcs);
        writefln("Host: %s", hostname);
        writefln("Path: %s", path);
    }

    void fetch(CmdOptions ops)
    {
        if (vcs != "local")
        {
            if (exists() && isDir(location))
            {
                if (ops.rebuild)
                {
                    writefln("Fetching %s (%s from %s)...", id, path, hostname);
                    pull();
                }
            }
            else
            {
                writefln("Fetching %s (%s from %s)...", id, path, hostname);
                clone();
            }
        }
    }

    bool exists()
    {
        return (std.file.exists(location));
    }

    void clone()
    {
        if (vcs == "git")
        {
            string command;
            if (useHTTPS)
                command = format("git clone https://%s/%s.git %s", hostname, path, location);
            else
                command = format("git clone git@%s:%s.git %s", hostname, path, location);
            writeln(command);
            executeShell(command);
        }
    }

    void pull()
    {
        if (vcs == "git")
        {
            string command = format("cd %s && git pull", location);
            writeln(command);
            executeShell(command);
        }
    }
}

